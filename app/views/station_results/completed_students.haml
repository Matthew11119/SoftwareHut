%div#formHead    
    %p #{@exam_show.first.exam_code} #{@exam_show.first.name}
    %h3 #{@stations.first.station_name}
    %span#label-help.pull-right{:style=>"padding-right:1.625em"} #label-help
%div#formBody
    %nav.navbar.navbar-default.navbar-static-top
        %div.container
            %ul.nav.navbar-nav.navbar-center
                %li= link_to 'Remaining', exam_station_station_result_remaining_students_path(:exam_id=>params[:exam_id], :station_id=>params[:station_id],:station_result_id=>params[:station_result_id]), method: :post
                %li= link_to 'Completed', exam_station_station_result_completed_students_path(:exam_id=>params[:exam_id], :station_id=>params[:station_id],:station_result_id=>params[:station_result_id]), id: 'bold-select'
    %div#div-search    
        = simple_form_for :form_search do |f|        
            = f.input :student_id, :placeholder => "Student ID", :label=>"Search by"
            = f.input :student_surname, :placeholder => "Surname", :label=>false
            %div{:style=>'padding-top:1.250em;padding-bottom:3.781em'}
                = f.button :submit, 'Search', class: 'btn btn-primary pull-right ajax-modal', style:'background-color:#22A7F0;border-color:#22A7F0;padding:0.438em 3.875em'
                = link_to 'Reset', new_exam_station_station_result_path(:exam_id=>@stations.first.exam_id,:station_id=>@stations.first.id) , class: 'btn pull-right',style:'color:#22A7F0'
