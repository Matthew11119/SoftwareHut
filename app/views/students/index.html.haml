= link_to 'New Student', new_student_path
%br

= form_tag student_import_students_path, multipart: true do
  = file_field_tag :file
  = submit_tag "Upload Students"


= form_tag destroy_multiple_students_path, method: :delete

%h1 Listing students

%table.table.table-hover
  %thead
    %tr
      %th Last Name
      %th First Name
      %th Username
      %th Student ID
      %th
        %input{type: "checkbox", id:"selectAll"}
      %th= submit_tag "Delete selection", class: "btn btn-primary btn-xs"

  %tbody
    - @students.each do |student|
      %tr
        %td= student.surname
        %td= student.forename
        %td= student.username
        %td= student.regno
        %td= check_box_tag "student_regnos[]", student.regno, false, class: 'selectable'
%br



%h1 Modules

%table.table.table-hover
  %thead
    %tr
      %th Module code
      %th Module name
      %th
      %th
      %th

  %tbody
    - @modules.each do |uni_module|
      %tr
        %td= uni_module.module_code
        %td= uni_module.module_name
        %td= link_to 'Show', uni_module
        %td= link_to 'Edit', edit_uni_module_path(uni_module)
        %td= link_to 'Delete', uni_module, method: :delete, data: { confirm: 'Are you sure?' }

%br
= link_to 'New Uni module', new_uni_module_path
