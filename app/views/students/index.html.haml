%h1 Listing students

%table.table.table-hover
  %thead
    %tr
      %th Last Name
      %th First Name
      %th Username
      %th Student ID
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.surname
        %td= student.forename
        %td= student.username
        %td= student.regno
        %td= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Student', new_student_path
%br
= form_tag my_import_students_path, multipart: true do
  = file_field_tag :file
  = submit_tag "Upload Students"


%h1 Modules

%table.table.table-hover
  %thead
    %tr
      %th Module code
      %th Module name
      %th
      %th
      %th

  %tbody
    - @modules.each do |uni_module|
      %tr
        %td= uni_module.module_code
        %td= uni_module.module_name
        %td= link_to 'Show', uni_module
        %td= link_to 'Edit', edit_uni_module_path(uni_module)
        %td= link_to 'Delete', uni_module, method: :delete, data: { confirm: 'Are you sure?' }

%br
= link_to 'New Uni module', new_uni_module_path
