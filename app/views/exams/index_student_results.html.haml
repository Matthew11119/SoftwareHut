-# Results for an individual student, can pick stations to see more details

%h1= @exam.name

%table.table.table-hover
  %thead
    %tr
      %th Last Name
      %th First Name
      %th Username
      %th Student ID
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.surname
        %td= student.forename
        %td= student.username
        %td= student.regno
        %td= link_to 'Details', student_result_url(username: student.username, exam_code: @exam.exam_code)

%h4
  = link_to "Download results CSV", exam_results_path(format: 'csv')
