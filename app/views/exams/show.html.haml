%p#notice= notice

%h3 Exam
%p
  %b Exam code:
  = @exam.exam_code
%p
  %b Exam date:
  = @exam.date
%p
  %b Exam name:
  = @exam.name
%p
  %b Module code:
  = @exam.module_code
%p
  %b Status:
  = status_string(@exam.status)

= link_to 'Edit', edit_exam_path(@exam)
\|
= link_to 'Back', exams_path

%br
%h3 Stations:

%table
  %thead
    %tr
      %th Station name
      %th Pass mark
      %th
      %th
      %th

  %tbody
    -Station.where(exam_id: @exam.exam_code).each do |station|
      %tr
        %td= station[:station_name]
        %td= station[:pass_mark]
        %td= link_to 'Show', station
        %td= link_to 'Edit', edit_station_path(station)
        %td= link_to 'Delete', station, method: :delete, data: { confirm: 'Are you sure?' }


