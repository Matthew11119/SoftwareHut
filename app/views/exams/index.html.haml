%div#examsToday
  %p Today's #{@exam_today.count>1? 'Exams':'Exam' }  &nbsp &nbsp #{Time.now.strftime("%d/%m/%Y")}
  %table.table
    %thead
      %tr
        %th{:scope=>"col"} Module Code
        %th{:scope=>"col"} Examination Title
        %th{:scope=>"col"} Action
    %tbody
      - @exam_today.each do |exam_today|
        %tr
          %td= exam_today.module_code
          %td= exam_today.name
          %td= link_to 'Select', exams_path
  = will_paginate @exam_today, :renderer => WillPaginate::ActionView::LinkRenderer, :class=>"text-center"
  
  -# %nav{:aria-label=>"..."}
  -#   %ul.pagination
  -#     %li.disabled
  -#       %a
  
  %p Upcoming Exams
  %table.table
    %thead
      %tr
        %th{:scope=>"col"} Module Code
        %th{:scope=>"col"} Examination Title
        %th{:scope=>"col"} Action
    %tbody
      %tr
        %td code
        %td title
        %td= link_to "Select", exams_path