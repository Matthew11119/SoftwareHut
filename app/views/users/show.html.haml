- content_for :title, "Users"

%table
  %tbody
    %tr
      %td= "Name:"
      %td= @user.givenname + " " + @user.sn
    %tr
      %td= "Username:"
      %td= @user.username
    %tr
      %td= "User type:"
      %td= @user.user_type
    %tr
      %td= "Email:"
      %td= @user.email

= link_to 'Edit', edit_user_path(@user)
\|
= link_to 'Back', users_path
